<idea-plugin version="2">
  <id>de.espend.idea.android</id>
  <name>Android Studio Prettify</name>
  <version>0.2.1</version>
  <vendor email="daniel@espendiller.net" url="http://espend.de">espend</vendor>

  <description><![CDATA[
    <h1>Android Studio Prettify</h1>
    <br/>
    <a href="https://github.com/Haehnchen/idea-android-studio-plugin/issues">Issues</a>
    <br/>

<h2>Features</h2>

<ul>
    <li>Generator for inflater and activity setContentView view variables</li>
    <li>"Extract String resource" shortcut in context menu</li>
    <li>LineMarker for view types</li>
    <li>View cast checking annotator</li>
    <li>Field and method variable generator for views</li>
    <li>Related layout files for nested classes</li>
</ul>

    ]]>
  </description>

  <change-notes>
      <![CDATA[

<h2>0.2.1</h2>
<ul>
    <li>make code generator compatible with latest intellij build</li>
</ul>

<h2>0.2</h2>
<ul>
    <li>Implement support for activity setContentView</li>
    <li>Optimize generator field detection</li>
</ul>

<h2>0.1</h2>
<ul>
    <li>Add "Extract String resource" shortcut in context menu</li>
    <li>Add LineMarker for view types</li>
    <li>Add view cast checking annotator</li>
    <li>Add field and method variable generator for views</li>
    <li>Add related layout files for nested classes</li>
</ul>

      ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">

      <annotator language="JAVA" implementationClass="de.espend.idea.android.annotator.InflateViewAnnotator"/>
      <annotator language="JAVA" implementationClass="de.espend.idea.android.annotator.InflateCastAnnotator"/>

      <codeInsight.lineMarkerProvider language="JAVA" implementationClass="de.espend.idea.android.linemarker.FragmentRelatedFileLineMarker"/>
      <codeInsight.lineMarkerProvider language="JAVA" implementationClass="de.espend.idea.android.linemarker.ViewInflateLineMarker"/>
      <codeInsight.lineMarkerProvider language="JAVA" implementationClass="de.espend.idea.android.linemarker.InflateLayoutLineMarkerProvider"/>

  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <depends>org.jetbrains.android</depends>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

  <actions>

      <action id="Android.Pretty.View.Inflate.Variables" class="de.espend.idea.android.action.generator.LocalViewAction" text="View Variables">
          <add-to-group group-id="GenerateGroup" anchor="last" />
      </action>
      <action id="Android.Pretty.View.Inflate.Fields" class="de.espend.idea.android.action.generator.FieldViewInflateViewAction" text="View Fields">
          <add-to-group group-id="GenerateGroup" anchor="last" />
      </action>

      <action id="Android.Pretty.View.Activity.Variables" class="de.espend.idea.android.action.generator.ActivityViewMethodVariable" text="View Variables">
          <add-to-group group-id="GenerateGroup" anchor="last" />
      </action>
      <action id="Android.Pretty.View.Activity.Field" class="de.espend.idea.android.action.generator.ActivityViewFieldVariable" text="View Fields">
          <add-to-group group-id="GenerateGroup" anchor="last" />
      </action>

      <action id="Espend.Android.Menu" class="de.espend.idea.android.action.ExtractStringAction">
          <add-to-group group-id="EditorPopupMenu"/>
      </action>

  </actions>

</idea-plugin>